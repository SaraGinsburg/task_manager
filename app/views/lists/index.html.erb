<h1>Your Lists</h1>

<ul>
<% @lists.each do |list| %>
  <li>
    <%= link_to list.name, list_path(list) %>
    <%= link_to "Rename list", edit_list_path(list) %>
    <%= button_to "❌", list, method: :delete %>
  </li>
<% end %>
</ul>

<%= form_for @new_list do |f| %>
  <%= f.text_field :name, placeholder: @new_list.errors.full_messages_for(:name).first%>
  <%= f.label "add collaborators?" %>
  <%= f.collection_check_boxes(:user_ids, User.all, :id, :full_name, include_hidden: false) %>
  <%= f.submit "add list" %>
<% end %>
