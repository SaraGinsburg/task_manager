<h2>Your Lists</h2>

<div>
<ul>
<% @lists.each do |list| %>
  <li>
    <%= link_to list.name, list_path(list) %>
    <%= link_to "Rename list", edit_list_path(list) if policy(list).update? %>
    <%= button_to "❌", list, method: :delete if policy(list).destroy? %>
  </li>
<% end %>
</ul>
</div>

<br><br>

<div>
<%= form_for @new_list do |f| %>
  <%= f.label "New List" %>
  <%= f.text_field :name, placeholder: @new_list.errors.full_messages_for(:name).first%><br>
  <%= f.label "add collaborators?" %>
  <%= f.collection_check_boxes(:user_ids, User.all, :id, :full_name, include_hidden: false)%>
  <%= f.submit "add list" %>
<% end %>
</div>
