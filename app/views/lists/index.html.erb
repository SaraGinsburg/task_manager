<h2>Your Lists</h2>

<div>
<ul>
<% @lists.each do |list| %>
  <li>
    <%= link_to list.name, list_path(list) %>
    <%= link_to "Rename list", edit_list_path(list) if policy(list).update? %>
    <%= button_to "❌", list, method: :delete if policy(list).destroy? %>
  </li>
<% end %>
</ul>
</div>

<br><br>

<%= render partial: "lists/new_list_form", locals: {list: @new_list} %>
