<div class="title">
  <h2>Your Lists</h2>
</div>


<div>
<ul>
<% @lists.each do |list| %>
  <li>
    <%= link_to list.name, list_path(list), class: "list-link", data: {id: list.id} %>
    <%= link_to "Rename list", edit_list_path(list), class: "dark" if policy(list).update? %>
    <%= button_to "❌", list, method: :delete if policy(list).destroy? %>
    <div class="list-<%= list.id %>-tasks-container"></div>
  </li>
<% end %>
</ul>
</div>

<br><br>

<%= render partial: "lists/new_list_form", locals: {list: @new_list} %>
