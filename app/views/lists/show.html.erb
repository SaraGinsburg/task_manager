<h1>List show page</h1>
<h2><%= @list.name %></h2>
<% if @list.tasks != [] %>
  <ul>
    <% @list.tasks.each do |task| %>
      <li class= "<%= task.status %>"><%= task.name %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@list, @task] do |f| %>
  <%= f.label :name, "task details"%>
  <%= f.text_field :name, placeholder: @task.errors.full_messages_for(:name).first%>
  <%= f.label :due_date, "due date"%>
  <%= f.datetime_select :due_date, ampm: true, :minute_step => 15 %>
  <%= f.hidden_field :status, value: "not_started" %>
  <%= f.submit "add task" %>
<% end %>

<%= link_to 'home', lists_path %>
